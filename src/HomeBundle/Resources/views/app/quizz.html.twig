{% extends 'HomeBundle::base.html.twig' %}

{% block title %} Quizz {% endblock %}

{% block header %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/bootstrap/css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/questionHome.css') }}"/>
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
              integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
              crossorigin="anonymous">
    {% endblock %}
{% endblock %}

{% block content %}
    {% block _HomeBundle %}
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-8 col-sm-8">
                            <a class="btn btn-default btn-lg pull-left icoHome" href="{{ path('home_homepage') }}">
                                <img class="imgQuizz" src="{{ asset('assets/img/imageHome/maison.png') }}">
                            </a>
                        </div>
                        <div class="col-md-8 col-sm-8">
                            <div class="question pull-right">
                                <h3 id="questionLabel" class="text-center"></h3>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-4">
                            <img id="perso" src="" alt="" width="200" height="230">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 prog">
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0"
                                     aria-valuemax="100" style="width: 10%;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div id="responseContainer" class="row"></div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="text-center">
                        <br/>
                        <a class="btn btn-warning btn-lg disabled" id="prev">Pr√©cedent</a>
                        <a class="btn btn-danger btn-lg disabled" id="next"
                           data-href="{{ path('home_quizz_resolution') }}">Suivant</a>
                    </div>
                </div>
            </div>
        </div>

        <input type="hidden" id="widthInput" value="{{ imageParam.width }}">
        <input type="hidden" id="heightInput" value="{{ imageParam.height }}">
    {% endblock %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/home/QuizzProcess.js') }}"></script>
    <script src="{{ asset('assets/js/home/questionScroll.js') }}"></script>
{% endblock %}

{% block footer %}
{% endblock %}


